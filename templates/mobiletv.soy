/**
 * Provides the simple epg list item template (inline template).
 * @param start The start hour:minute of the item.
 * @param title The name of the program.
 * @param description The program description.
 * @param delimiter The day it is starting, formatted appropriately or an ampty string.
 * @isscheduled True if we want to render scheduled
 */
{template .epgItem}
  <div class="{css epg-list-item}
    {if $delimiter != ''}
      {sp}{css epg-delimiter}
    {/if}
    ">
    <div class="{css inner-epg-list-item}">
      <div class="{css epg-list-item-container}">
        {if $delimiter != ''}
          <div class="{css epg-list-item-time}">{$delimiter}<br>{$start}</div>
        {else}
          <div class="{css epg-list-item-time}">{$start}</div>
        {/if}
        {if $description == ''}
          <div class="{css epg-list-item-title} {css epg-list-item-title-large}">{$title}</div>
        {else}
          <div class="{css epg-list-item-title}">{$title}</div>
        {/if}
        <div class="{css epg-list-item-description}">{$description}</div>
        <div class="{css epg-list-item-button}"></div>
      </div>
    </div>
  </div>
{/template}


/**
 * The template is for the paymnet popup for the mobile app.
 */
{template .paymnetConfirmation}
  <div class="{css overlay}">
    <div class="{css centerer}">
      <div class="{css dialog}">
        <div class="{css close}"></div>
        <div class="{css confirm-panel}">
          <div class="{css warning-sign}"></div>
          <span class="{css notice}">{msg desc="payment required notice"}Payment of{sp}</span>
          <span class="{css notice}" data-model="price"></span>{sp}
          <span class="{css notice}" data-model="currency"></span>{sp}
          <span class="{css notice}">is required.<br>Click "OK" to accept the charges.{/msg}</span>
          <div class="{css dummy}">
            <div class="{css dialog-text-button} {css ok}" data-action="ok">{msg desc="button label ok"}OK{/msg}</div>
            <div class="{css dialog-text-button} {css cancel}" data-action="cancel">{msg desc="button label cancel"}Cancel{/msg}</div>
          </div>
        </div>
      </div>
    </div>
  </div>
{/template}


/**
 * The template for the epg schedule item.
 * @param publishName The title.
 */
{template .EpgScheduleItem}
  <div class="{css epg-schedule-item}">
    <span>{$publishName}</span>
  </div>
{/template}


