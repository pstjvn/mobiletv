{namespace mobiletv.template}

/**
 * Template for basic app structure.
 * @param embed If the app should be embedded.
 */
{template .mobiletv}
  <div class="{css container}">
    {call .topPanel data="all" /}
    {call .searchPanel /}
    <div class="{css up}">
      <div class="{css left}">
        <div class="{css list} {css playable-list}"></div>
        <div class="{css epg-container}">
          <div class="{css epg-header}">
            <div class="{css epg-title}"></div>
          </div>
          <div class="{css epg-list}"></div>
        </div>
        <div class="{css epg-schedule-list}"></div>
      </div>
    </div>
    <div class="{css right}">
      <div class="{css backbutton}">{msg desc="back button label"}Back{/msg}</div>
      <div class="{css item-title}" data-model="publishName">&nbsp;</div>
      <div class="{css frame}">
        <video width="100%" height="100%" controls autoplay></video>
      </div>
      <div class="{css description}"></div>
      <div class="{css branding}"></div>
    </div>
  </div>
  {call .paymnetConfirmation /}
  {call smstb.template.notification /}
{/template}



/**
 * Template for top panel
 * @param embed If the application is embedded in aother one.
 */
{template .topPanel}
  <div class="{css panel}">
    <div class="{css icons}">
      <div class="{css icon} {css icon-back}" data-action="back"></div>
      {if $embed != true}
        <div class="{css icon} {css icon-menu}" data-action="menu"></div>
      {/if}
      <div class="{css icon} {css icon-search}" data-action="search"></div>
    </div>
    <div class="{css drawer} {css icons}">
      {if $embed != true}
        <div class="{css icon} {css icon-cart}" data-action="cart"></div>
        <div class="{css icon} {css icon-private}" data-action="logout"></div>
        <div class="{css icon} {css icon-list}" data-action="statement"></div>
        <div class="{css icon} {css icon-calendar}" data-action="schedule"></div>
      {/if}
    </div>
  </div>
{/template}

